<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.FloatingWindow.Popup"
    >

    <TextView
        android:text="@string/pin_generate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="99dp"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:paddingStart="10sp"
        android:paddingEnd="10sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="41dp"
        android:id="@+id/pinText"
        android:background="@drawable/rounded_corners_bg"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:hint="PIN"
        android:textAlignment="center" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/pinSubmitButton"
        android:layout_below="@+id/pinText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pin_server_response_label"
        android:textStyle="normal|italic"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/pinText"
        android:layout_alignStart="@+id/pinText"
        android:layout_alignEnd="@+id/pinText" />
</RelativeLayout>
