<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="horizontal">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailStatusText"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft" />

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/compass_pointer_2"
        android:id="@+id/compassPointerImageView"
        android:layout_weight="1"
        android:layout_below="@+id/detailStatusText"
        android:layout_alignParentStart="true"
        android:layout_height="300sp" />

    <ImageView
        android:id="@+id/configImage"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:src="@mipmap/config_icon"
        android:onClick="configureWatch"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
