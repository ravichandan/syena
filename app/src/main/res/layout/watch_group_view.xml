<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/textViewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/surfaceView"
        android:layout_toRightOf="@+id/surfaceView"
        android:layout_toStartOf="@+id/startWatchSwitch"
        android:layout_toLeftOf="@+id/startWatchSwitch"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/displayNameText"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textIsSelectable="false"
            android:ellipsize="end"
            android:maxLines="1"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/smallStatusText"
            android:textStyle="normal"
            android:maxLines="1"

            />
    </LinearLayout>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startWatchSwitch"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:gravity="center_vertical"
        android:foregroundGravity="center_vertical" />

    <SurfaceView
        android:layout_width="15sp"
        android:layout_height="match_parent"
        android:id="@+id/surfaceView"
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
